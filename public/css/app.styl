@import 'nib'
global-reset()

@import url('')

body
  background-color #111
  color white
  font-family 'Open Sans', sans-serif;
  overflow hidden

a
  color white
  cursor pointer
  text-decoration none

.container
  max-width 80%
  margin 0 auto
  padding 20px

.container:after
  content ""
  display table
  clear both

.logo
  width 20%
  min-width 200px

.left-panel
	width 200px
	float left
	nav
	  margin-top 20px
	  padding-left 40px
	  text-align center
	  width 120px

	nav li
	  padding-bottom 15px
	  font-size 1.2em

.right-panel
	float left
	padding 20px
	width calc(100% - 240px)
